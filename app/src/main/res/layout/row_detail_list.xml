<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingTop="@dimen/row_padding_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/recycler_view_padding_vertical"
        android:paddingBottom="@dimen/recycler_view_padding_vertical"
        android:paddingLeft="@dimen/recycler_view_padding_horizontal"
        android:paddingRight="@dimen/recycler_view_padding_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/row_padding_vertical"
            android:paddingBottom="@dimen/row_padding_vertical">

            <ImageView
                android:id="@+id/wind_speed_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_wind_speed"/>

            <TextView
                android:id="@+id/wind_speed_name"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/row_padding_horizontal"
                android:text="Wind speed"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size" />

            <TextView
                android:layout_weight="2"
                android:id="@+id/wind_speed_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/row_padding_vertical"
            android:paddingBottom="@dimen/row_padding_vertical">

            <ImageView
                android:id="@+id/humidity_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_humidity" />

            <TextView
                android:id="@+id/humidity_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="start"
                android:paddingLeft="@dimen/row_padding_horizontal"
                android:text="Humidity"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size" />

            <TextView
                android:id="@+id/humidity_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/row_padding_vertical"
            android:paddingBottom="@dimen/row_padding_vertical">

            <ImageView
                android:id="@+id/pressure_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_pressure" />

            <TextView
                android:id="@+id/pressure_name"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/row_padding_horizontal"
                android:text="Pressure"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size" />

            <TextView
                android:layout_weight="2"
                android:id="@+id/pressure_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="123.45"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/row_padding_vertical"
            android:paddingBottom="@dimen/row_padding_vertical">

            <ImageView
                android:id="@+id/visibility_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_visibility" />

            <TextView
                android:id="@+id/visibility_name"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/row_padding_horizontal"
                android:text="Visibility"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size" />

            <TextView
                android:layout_weight="2"
                android:id="@+id/visibility_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/row_padding_vertical"
            android:paddingBottom="@dimen/row_padding_vertical">

            <ImageView
                android:id="@+id/sunrise_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_sunrise" />

            <TextView
                android:id="@+id/sunrise_name"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="@dimen/row_padding_horizontal"
                android:text="Sunrise"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size" />

            <TextView
                android:layout_weight="2"
                android:id="@+id/sunrise_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="123.45"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/row_padding_vertical"
            android:paddingBottom="@dimen/row_padding_vertical">

            <ImageView
                android:id="@+id/sunset_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/ic_sunset" />

            <TextView
                android:id="@+id/sunset_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="start"
                android:paddingLeft="@dimen/row_padding_horizontal"
                android:text="Sunset"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size" />

            <TextView
                android:id="@+id/sunset_data"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="end"
                android:textColor="#000"
                android:textSize="@dimen/recycler_view_text_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>